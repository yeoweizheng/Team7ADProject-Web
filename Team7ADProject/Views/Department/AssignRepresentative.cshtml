@using Team7ADProject.Models;
@{
    List<AssignForm> assignForms = (List<AssignForm>)ViewData["assignForms"];
}
<h4>
    Assign Representative
    <a class="btn btn-default" href="/Department/AddAssignRepresentative">Add</a>
</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignForm in assignForms)
        {
            <tr>
                <td>@assignForm.DepartmentStaff.Name</td>
                <td>@assignForm.StartDate</td>
                <td>@assignForm.EndDate</td>
                <td>
                    <button class="btn btn-default" onclick="CancelAssignStaff(@assignForm.AssignFormId)">Cancel</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    function cancelAssignStaff(assignFormId) {
        $.ajax({
            url: "/Department/CancelAssignStaff",
            method: "POST",
            data: { assignFormId: assignFormId },
            success: function () {
                window.location.href = "/Department/AssignRepresentative";
            }
        });
    }
</script>