@using Team7ADProject.Models;
@{
    List<DepartmentRequest> departmentRequests = (List<DepartmentRequest>)ViewData["departmentRequests"];
    CollectionPoint collectionPoint = (CollectionPoint)ViewData["collectionPoint"];
}

<h4>
    Department Requests [Collect at @collectionPoint.Name]
</h4>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departmentRequest in departmentRequests)
        {
            <tr>
                <td>@departmentRequest.DepartmentRequestId</td>
                <td>@departmentRequest.Date</td>
                <td>@departmentRequest.Status</td>
                <td>
                    @if(departmentRequest.Status == "Pending Acceptance")
                    {
                        <a class="btn btn-default" href="/Department/DepartmentRequestDetail/@departmentRequest.DepartmentRequestId">Update</a>
                    } else
                    {
                        <a class="btn btn-default" href="/Department/DepartmentRequestDetail/@departmentRequest.DepartmentRequestId">View</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


