@using Team7ADProject.Models;
@{
    StationeryRequest stationeryRequest = (StationeryRequest)ViewData["stationeryRequest"];
    <!--DepartmentRequest departmentRequest = (DepartmentRequest)ViewData["departmentRequest"];-->
    List<DepartmentRequest> departmentRequests = (List<DepartmentRequest>)ViewData["departmentRequests"];
}
<h4>View Disbursements</h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Request Id</th>
            <th>Date Requested</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departmentRequest in departmentRequests)
        {
            if(departmentRequest.Status=="Disbursed")
            {
            <tr>
                <td>@stationeryRequest.StationeryRequestId</td>
                <td>@stationeryRequest.Date</td>
                <td>@stationeryRequest.Status</td>
                <td>
                    <a class="btn btn-default" href="/Store/ViewDisbursements/@stationeryRequest">View</a>
   
                </td>
            </tr>
            }
        }
    </tbody>
</table>


