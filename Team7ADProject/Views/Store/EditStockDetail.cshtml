@using Team7ADProject.Models;

@{
    Stationery stationery = (Stationery)ViewData["stationery"];
}
    <h4>
        Edit Stock Detail
    </h4>
<form action="/Store/EditStockDetail/@stationery.StationeryId" method="post">
    <table class=" table table-hover">
        <tr>
            <th>Item Number</th>
            <td>@stationery.ItemNumber</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@stationery.Category.Name</td>
        </tr>
        <tr>
            <th>Description </th>
            <td>
                <input type="text" class="form-control" name="description" />
            </td>
        </tr>
        <tr>
            <th>Unit of Measure</th>
            <td>@stationery.UnitOfMeasure.Name</td>
        </tr>
        <tr>
            <th>Quantity in Stock</th>
            <td>
                <input type="number" class="form-control" name="quantityInStockStr" />
            </td>
        </tr>
        <tr>
            <th>Reorder Level</th>
            <td>
                <input type="number" class="form-control" name="reorderLevel" />
            </td>
        </tr>
        <tr>
            <td><button type="submit" class="btn btn-default">Submit</button></td>
        </tr>
    </table>
</form>

