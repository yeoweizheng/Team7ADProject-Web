@using Team7ADProject.Models;
@{
    List<Stationery> stationeries = (List<Stationery>)ViewData["stationeries"];
}
    <h4>
        Stock List
        <!--<a class="btn btn-default" href="/Store/AddStationery">Add</a>-->
    </h4>
<table class="table table-hover" id="stockList">
    <thead>
        <tr>
            <th>Item Number</th>
            <th>Category</th>
            <th>Description</th>
            <th>Unit of Measure</th>
            <th>Quantity in Stock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stationery in stationeries)
        {
            <tr>
                <td>@stationery.ItemNumber</td>
                <td>@stationery.Category.Name</td>
                <td>@stationery.Description</td>
                <td>@stationery.UnitOfMeasure.Name</td>
                <td>@stationery.QuantityInStock</td>
                <td>
                    <a class="btn btn-default" href="/Store/StockDetail/@stationery.StationeryId">View</a>
                    <a class="btn btn-default" href="/Store/EditStockDetail/@stationery.StationeryId">Edit</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
<script>
    $(function () {
        $("#stockList").DataTable();
    });
</script>